{
    "name": "keepit",
    "version": "1.0.0",
    "description": "KeepIt! is a Discord bot that will resend deleted messages",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "start": "npm ci && npm i -g typescript && npx tsc && npx tsc-alias && cp package.json dist && sed -i '/\"type\": \"module\",/d' dist/package.json && node dist/index.js",
        "build": "npx tsc && npx tsc-alias",
        "format": "npx prettier --write .",
        "lint": "npx prettier --check . && npx eslint ./src",
        "pre:push": "npm run format && npm run lint",
        "dev": "npx nodemon --exec \"npx tsx src/index.ts\" --watch src/ -e ts",
        "database:generate": "npx drizzle-kit generate",
        "database:migrate": "npx drizzle-kit migrate"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@google-cloud/storage": "^7.11.2",
        "@neondatabase/serverless": "^0.9.3",
        "discord.js": "^14.15.3",
        "dotenv": "^16.4.5",
        "drizzle-orm": "^0.31.2",
        "uuid": "^10.0.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.5.0",
        "@types/eslint__js": "^8.42.3",
        "@types/node": "^20.14.2",
        "@types/uuid": "^10.0.0",
        "drizzle-kit": "^0.22.7",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "nodemon": "^3.1.3",
        "prettier": "^3.3.2",
        "ts-node": "^10.9.2",
        "tsc-alias": "^1.8.10",
        "typescript": "^5.4.5",
        "typescript-eslint": "^7.13.1"
    }
}
